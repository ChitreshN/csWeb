<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="styles/styles.css" rel="stylesheet" />
</head>
<body>
    <%- include("partials/header.ejs") %>
    <!-- select the table you want to view  done  -->
    <form action="/GetTableDropDown" method="post">
        <label for="tableName">Choose a Table:</label>
        <select name="tableName">
          <%if(locals.tableName){%>
            <option value="<%=tableName%>"><%=tableName%></option>
          <%}else{%>
          <option id="select">Select</option>
          <%}%>
          <%for(var i=0;i<tables.length;i++){%>
            <option value="<%=tables[i].table_name%>" ><%=tables[i].table_name%></option>
          <%}%>
        </select>
        <input type="submit" value="Go">
      </form>
  
    <!-- select what data you want from the table  -->
    <!-- display the data as a table just as shown in the website before  -->
    <%if(locals.columns){%>

      <table>
        <form action="/displayTable" method="post">
          <%for(var i=0;i<columns.length;i++){%>
            <th>
              <input type="checkbox" name="<%= columns[i] %>" value="<%= columns[i] %>" />
              <label for="<%= columns[i] %>"><%= columns[i] %></label>
            </th>
          <%}%>
          <th>
            <input type="hidden" name="tableName" value="<%=tableName%>"/>
            <input type="submit" value="Go"/>
          </th>
        
        </form>

      </table>

    <%}%>
    <%if(locals.data){%>
      <table>
        <tr>
          <% for(var j=0; j<heading.length; j++) { %>
            <th><%= heading[j] %></th>
          <% } %>
        </tr>
        <% for(var i=0; i<data.length; i++) { %>
          <tr>
            <% for(var j=0; j<heading.length; j++) { %>
              <td><%= data[i][heading[j]] %></td>
            <% } %>
          </tr>
        <% } %>
      </table>
      
    <%}%>
    <%- include("partials/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>